<Page navigatingTo="onNavigatingTo" loaded="onLoaded" navigatedTo="onNavigatedTo" class="page" xmlns:lv="nativescript-ui-listview" xmlns="http://schemas.nativescript.org/tns.xsd" >
    <ActionBar class="action-bar" />

<GridLayout columns="*" rows="*">
    <lv:RadListView id="legislatorListView" row="0" col="0" items="{{ legislatorList }}" multipleSelection="true"
        selectionBehavior="Press" itemSelected="onItemSelected" itemDeselected="onItemDeselected" 
        filteringFunction="{{ filteringFunction }}" groupingFunction="{{ groupingFunction }}">
        <lv:RadListView.itemTemplate>
                <StackLayout class="rad-list-view-item">
                    <Label text="{{ legislator }}" class="list-view-item-main-top" />
                </StackLayout>
        </lv:RadListView.itemTemplate>
    </lv:RadListView>
    <ActivityIndicator busy="{{ isLoading }}" android:height="25%" android:width="25%" ios.activityIndicatorViewStyle="whiteLarge" rowSpan="0" colSpan="1" />
</GridLayout>
</Page>
