        <GridLayout row="1" col="0" columns="*" rows="auto" class="list-view-item-form">
            <ListPicker id="legislatorListPicker" row="0" col="0" items="{{ legislatorList.Items }}" selectedIndex="{{ legislatorIndex }}" 
                horizontalAlignment="center" class="list-view-item-right"></ListPicker>
            
        </GridLayout>
        <StackLayout row="2" col="0" height="100%" class="list-view-section-header"></StackLayout>
        <ActivityIndicator busy="{{ isLoading }}" rowSpan="3" colSpan="1" />
    </GridLayout> -->
</Page>
