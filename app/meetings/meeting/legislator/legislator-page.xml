<Page navigatingTo="onNavigatingTo" loaded="onLoaded" navigatedTo="onNavigatedTo" class="page" xmlns:lv="nativescript-ui-listview" xmlns="http://schemas.nativescript.org/tns.xsd" >
    <ActionBar class="action-bar" />

<GridLayout columns="*" rows="*">
    <lv:RadListView id="legislatorListView" row="0" col="0" items="{{ legislatorList }}" multipleSelection="true"
        selectionBehavior="Press" itemSelected="onItemSelected" itemDeselected="onItemDeselected" groupingFunction="{{ groupingFunction }}">
        <lv:RadListView.itemTemplate>
                <GridLayout columns="*, auto" rows="*" class="rad-list-view-item">
                    <StackLayout row="0" col="0">
                        <Label text="{{ legislator }}" class="list-view-item-main-top" />
                    </StackLayout>
                    <!-- <Label row="0" col="1" text="&#xf00c;" class="fn-list-view-item-small" visibility="{{ selected ? 'visible' : 'collapse' }}" /> -->
                </GridLayout>
        </lv:RadListView.itemTemplate>
    </lv:RadListView>
    <ActivityIndicator busy="{{ isLoading }}" rowSpan="0" colSpan="1" />
</GridLayout>

    <!-- <GridLayout columns="*" rows="auto, auto, *">
