<Page navigatingTo="onNavigatingTo" class="page" xmlns:lv="nativescript-ui-listview" xmlns="http://schemas.nativescript.org/tns.xsd" >
    <ActionBar class="action-bar">
        <ActionItem tap="onAddTap" ios.systemIcon="4" android.systemIcon="ic_menu_add" ios.position="right" />
    </ActionBar>

    <GridLayout columns="*" rows="auto, *" height="100%" width="100%">
        <StackLayout row="0" col="0" verticalAlignment="center" horizontalAlignment="center" class="view-title">
            <Label id="legislatorId" text="" visibility="collapsed" />
            <Label id="legislatorName" text="" verticalAlignment="center" horizontalAlignment="center" />
        </StackLayout>
        <StackLayout row="1" col="0" verticalAlignment="top">
            <lv:RadListView id="profilesListView" items="{{ profilesList }}" itemTap="onItemTap" 
                swipeActions="true" itemSwipeProgressStarted="onSwipeCellStarted" height="100%">
                <lv:RadListView.itemSwipeTemplate>
                    <GridLayout columns="auto, *, auto" rows="*" backgroundColor="White" height="100%">
                        <!-- <StackLayout id="leftIcons" col="0" style="background-color: blue;" tap="onLeftSwipeClick" paddingLeft="16" paddingRight="16" orientation="horizontal">
                            <Label text="Delete" verticalAlignment="center" horizontalAlignment="center" class="tab-label" />
                        </StackLayout> -->
                        <StackLayout id="rightIcons" col="2" orientation="horizontal">
                            <GridLayout id="deleteIcon" columns="*" rows="*, auto, auto, *" tap="onRightSwipeClick" class="swipe-icons red">
                                <Label row="0" col="0" text="" />
                                <Label row="1" col="0" text="&#xf1f8;" class="tab-icon" />
                                <Label row="2" col="0" text="Delete" class="tab-label" />
                                <Label row="3" col="0" text="" />
                            </GridLayout>
                        </StackLayout>
                    </GridLayout>
                </lv:RadListView.itemSwipeTemplate>
                <lv:RadListView.itemTemplate>
                    <GridLayout columns="*, auto" rows="*" class="rad-list-view-item">
                        <StackLayout row="0" col="0" verticalAlignment="middle">
                            <Label text="{{ fullName }}" class="list-view-item-main-top" />
                            <Label text="{{ company }}" textWrap="true" class="list-view-item-sub" />
                        </StackLayout>
                        <Label row="0" col="1" text="&#xf105;" class="fn-list-view-item" />
                    </GridLayout>
                </lv:RadListView.itemTemplate>
            </lv:RadListView>
        </StackLayout>
        <ActivityIndicator busy="{{ isLoading }}" rowSpan="2" colSpan="1" />
    </GridLayout>
</Page>
