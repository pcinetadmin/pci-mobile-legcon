<Page navigatingTo="onNavigatingTo" class="page" xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:lv="nativescript-ui-listview" >
    <ActionBar class="action-bar" />
    
<!-- <StackLayout loaded="onViewLoaded" unloaded="onViewUnloaded"> -->
    <GridLayout columns="*" rows="auto, *" height="100%" width="100%">
        <StackLayout row="0" col="0" verticalAlignment="center" horizontalAlignment="center" direction="horizontal">
            <SearchBar row="0" col="0" id="searchBar" hint="Search" text="" loaded="onSearchBarLoaded" submit="onSubmit" clear="onClear" />
            <!-- <Button tap="onButtonTap" text="Toggle Cancel" /> -->
        </StackLayout>
        <StackLayout row="1" col="0" verticalAlignment="top">
            <ListView items="{{ legislatorsList }}" itemTap="onItemTap" loadMoreItems="onLoadMoreItems">
                <ListView.itemTemplate>
                    <GridLayout columns="*, auto" rows="*" class="list-view-item">
                        <Label row="0" col="0" text="{{ combinedName }}" class="list-view-item-main-top" />
                        <Label row="0" col="1" text="&#xf105;" class="fn-list-view-item" />
                    </GridLayout>
                </ListView.itemTemplate>
            </ListView>
        </StackLayout>
        <ActivityIndicator busy="{{ isLoading }}" rowSpan="2" colSpan="1" />
    </GridLayout>
<!-- </StackLayout> -->
</Page>
