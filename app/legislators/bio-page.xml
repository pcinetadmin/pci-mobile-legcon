<Page navigatingTo="onNavigatingTo" class="page" xmlns="http://schemas.nativescript.org/tns.xsd" >
    <ActionBar class="action-bar" />

    <GridLayout columns="*" rows="auto, auto, *" height="100%" width="100%">
        <StackLayout row="0" col="0" verticalAlignment="center" horizontalAlignment="center" class="view-title">
            <Label id="legislatorId" text="" visibility="collapsed" />
            <Label id="legislatorName" text="" horizontalAlignment="center" />
        </StackLayout>
        <StackLayout row="1" col="0" width="100%">
            <ListView items="{{ bioList }}" height="100%">
                <ListView.itemTemplate>
                    <GridLayout columns="*, auto" rows="*" class="list-view-item">
                        <Label row="0" col="0" text="{{ label }}" class="list-view-item-left" />
                        <Label row="0" col="1" text="{{ value }}" class="list-view-item-right" />
                    </GridLayout>
                </ListView.itemTemplate>
            </ListView>
        </StackLayout>
        <StackLayout row="2" col="0">
            <GridLayout columns="*" rows="*">
                <!-- <Label text="PCI Bio" row="0" col="0" class="list-view-item" /> -->
                <!-- <StackLayout class="list-view-item"> -->
                    <ScrollView row="0" col="0">
                        <TextView text="{{ bio }}" editable="false" class="scroll-view-item" />
                    </ScrollView>
                <!-- </StackLayout> -->
            </GridLayout>
        </StackLayout>
        <ActivityIndicator busy="{{ isLoading }}" rowSpan="3" colSpan="1" />
    </GridLayout>
</Page>
