<Page navigatingTo="onNavigatingTo" class="page" xmlns:lv="nativescript-ui-listview" xmlns="http://schemas.nativescript.org/tns.xsd" >
    <ActionBar class="action-bar" />

    <GridLayout columns="*" rows="auto, auto, *" height="100%" width="100%">
        <StackLayout row="0" col="0" verticalAlignment="center" horizontalAlignment="center">
            <SearchBar id="searchBar" hint="Search" text="" loaded="onSearchBarLoaded" submit="onSubmit" clear="onClear" />
        </StackLayout>
        <StackLayout row="1" col="0" verticalAlignment="center" horizontalAlignment="center">
            <SegmentedBar class="segmented-bar" selectedIndexChanged="onSelectedIndexChanged">
                <SegmentedBar.items>
                    <SegmentedBarItem title="Open Assignments" />
                    <SegmentedBarItem title="Closed Assignments" />
                </SegmentedBar.items>
            </SegmentedBar>
        </StackLayout>
        <StackLayout row="2" col="0" verticalAlignment="top">
            <lv:RadListView id="assignmentsListView" items="{{ assignmentsList }}" itemTap="onItemTap" loadMoreItems="onLoadMoreItems" 
                swipeActions="true" itemSwipeProgressStarted="onSwipeCellStarted" height="100%">
                <lv:RadListView.itemSwipeTemplate>
                    <GridLayout columns="auto, *, auto" rows="*" backgroundColor="White" height="100%">
                        <!-- <StackLayout id="leftIcons" col="0" style="background-color: blue;" tap="onLeftSwipeClick" paddingLeft="16" paddingRight="16" orientation="horizontal">
                            <Label text="Delete" verticalAlignment="center" horizontalAlignment="center" class="tab-label" />
                        </StackLayout> -->
                        <StackLayout id="rightIcons" col="2" orientation="horizontal">
                            <GridLayout id="addIcon" columns="*" rows="*, auto, auto, *" tap="onRightSwipeClick" class="swipe-icons orange" visibility="{{ meetingCreated === 'Y' ? 'collapse' : 'visible' }}">
                                <Label row="0" col="0" text="" />
                                <Label row="1" col="0" text="&#xf073;" class="tab-icon" />
                                <Label row="2" col="0" text="Add Meeting" class="tab-label" />
                                <Label row="3" col="0" text="" />
                            </GridLayout>
                        </StackLayout>
                    </GridLayout>
                </lv:RadListView.itemSwipeTemplate>
                <lv:RadListView.itemTemplate>
                    <GridLayout columns="*, auto" rows="*" class="rad-list-view-item">
                        <StackLayout row="0" col="0" verticalAlignment="middle">
                            <Label text="{{ legislator }}" class="list-view-item-main-top" />
                            <GridLayout columns="auto, *" rows="*" visibility="{{ initiative.length > 0 ? 'visible' : 'collapse' }}">
                                <Label row="0" col="0" text="Initiative: " class="list-view-item-sub-title" />
                                <Label row="0" col="1" text="{{ initiative }}" class="list-view-item-sub" />
                            </GridLayout>
                            <GridLayout columns="auto, *" rows="*">
                                <Label row="0" col="0" text="Survey: " class="list-view-item-sub-title" />
                                <Label row="0" col="1" text="{{ survey }}" class="list-view-item-sub" />
                            </GridLayout>
                        </StackLayout>
                        <Label row="0" col="1" text="&#xf105;" class="fn-list-view-item" />
                    </GridLayout>
                </lv:RadListView.itemTemplate>
            </lv:RadListView>
        </StackLayout>
        <ActivityIndicator busy="{{ isLoading }}" rowSpan="3" colSpan="1" />
    </GridLayout>
</Page>
