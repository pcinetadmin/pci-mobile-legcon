<Page navigatingTo="onNavigatingTo" class="page" xmlns="http://schemas.nativescript.org/tns.xsd" >
    <ActionBar class="action-bar">
        <android>
            <NavigationButton android.systemIcon="ic_menu_back" tap="onBackTap" />
        </android>
    </ActionBar>

    <GridLayout columns="*" rows="*" class="list-view-item-form" tap="onGridLayoutTap">
        <TextView id="helpfulContext" row="0" col="0" text="{{ helpfulContextPlainText }}" editable="false" class="list-view-item-textview" height="100%" />
    </GridLayout>
</Page>
